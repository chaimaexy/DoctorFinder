<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F3F3"
    android:backgroundTint="#DEEFF3"
    tools:context=".MainActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center_horizontal"
                android:orientation="vertical">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"

                    />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="227dp"
                    android:layout_height="160dp"
                    app:srcCompat="@drawable/homeimg"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="serif"
                    android:text="You are a Patient?\nFEELING TIRED?\n FIND A DOCTOR."
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#A82828"
                    android:textDirection="firstStrongRtl"
                    android:textIsSelectable="false"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/searchNearby"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:drawableStart="@drawable/location"
                    android:drawableEnd="@drawable/go"
                    android:paddingHorizontal="10dp"
                    android:text="SELECT SEARCH AREA"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_btn_search_doc"


                    />

                <Button
                    android:id="@+id/searchDoc"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/bg_btn_search_doc"
                    android:drawableStart="@drawable/person"
                    android:drawableEnd="@drawable/go"
                    android:paddingHorizontal="20dp"
                    android:text="SELECT DOCTOR SPECIALTY"
                    android:textAllCaps="false"
                    android:textColor="@color/black"

                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:fontFamily="serif"
                    android:text="You are a Doctor?\n Create a publicity for your Healthcare Office"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#A82828"
                    android:textDirection="firstStrongRtl"
                    android:textIsSelectable="false"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <Button
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/bg_btn_search_location"
                    android:drawableStart="@drawable/person_add"
                    android:drawableEnd="@drawable/go"
                    android:paddingHorizontal="20dp"
                    android:text="CREATE ACCOUNT"
                    android:textAllCaps="false"
                    android:textColor="@color/black"

                    />




            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>