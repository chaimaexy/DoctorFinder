<?xml version="1.0" encoding="utf-8"?>
    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:background="@drawable/profilee"
    android:id="@+id/drawerLayout"
    tools:context=".DoctorInfoActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25sp"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/back" />



        <ImageView
            android:id="@+id/DoctorImage"
            android:layout_width="match_parent"
            android:layout_height="170sp"
            android:layout_marginTop="80sp"
            android:layout_below="@id/back"
            android:padding="20sp"
            app:srcCompat="@drawable/homeimg" />

    </RelativeLayout>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240sp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/favoriteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/gray_heart"
                android:onClick="onFavoriteButtonClick" />
            <TextView
                android:id="@+id/favoriteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Add to favorites"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"

                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personnal information"
                    android:textSize="22sp"
                    android:layout_marginTop="30sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:id="@+id/personnalInfo"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20sp"
                    android:layout_height="match_parent"
                    android:padding="20sp"
                    android:background="@drawable/card1_style"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Name: "/>

                        <TextView
                            android:id="@+id/doctorNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"
                            android:text="name"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Email: "/>

                        <TextView
                            android:id="@+id/doctorEmailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"
                            android:text="email"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Gender: "/>

                        <TextView
                            android:id="@+id/doctorGenderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="16sp"
                            android:text="gender"/>
                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="Professional information"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:id="@+id/profesionalInfo"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20sp"
                    android:layout_height="match_parent"
                    android:padding="20sp"
                    android:requiresFadingEdge="vertical"
                    android:background="@drawable/card1_style"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/ExperienceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Experience: "/>

                        <TextView
                            android:id="@+id/doctorExperienceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Speciality: "/>

                        <TextView
                            android:id="@+id/doctorSpecialityTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"/>
                    </LinearLayout>




                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="Health care facility information"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:id="@+id/facilityInfo"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20sp"
                    android:layout_height="match_parent"
                    android:padding="20sp"
                    android:background="@drawable/card1_style"
                    android:requiresFadingEdge="vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Price: "/>

                        <TextView
                            android:id="@+id/doctorPriceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/PriceInfoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Price Info: "/>

                        <TextView
                            android:id="@+id/doctorPriceInfoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Location: "/>

                        <TextView
                            android:id="@+id/doctorLocationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="City: "/>

                        <TextView
                            android:id="@+id/doctorCityTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"/>
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="Working Schedule"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:id="@+id/workingTimeInfo"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20sp"
                    android:layout_height="match_parent"
                    android:padding="20sp"
                    android:background="@drawable/card1_style"
                    android:requiresFadingEdge="vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="Woring Days: "/>

                        <TextView
                            android:id="@+id/doctorDaysTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="From: "/>

                        <TextView
                            android:id="@+id/doctorStartTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="To: "/>

                        <TextView
                            android:id="@+id/doctorFinishTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:textSize="14sp"/>
                    </LinearLayout>



                </LinearLayout>




                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:background="@color/blue"
                        android:drawableLeft="@drawable/location"
                        android:padding="20sp"
                        android:text="show directions"
                        android:textSize="20sp" />
                <Button
                    android:id="@+id/callDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="70sp"
                    android:background="@color/green"
                    android:drawableLeft="@drawable/call"
                    android:padding="20sp"
                    android:text="CALL now"
                    android:textSize="20sp" />


            </LinearLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>





</androidx.drawerlayout.widget.DrawerLayout>

